<local:GameWindow 
    x:Class="CorpoIncremental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGameEngine;assembly=WPFGameEngine"
        mc:Ignorable="d"
        MinWidth="300" MinHeight="180"
        Title="Main Window" Height="400" Width="600"
        FontSize="20" Loaded="Window_Loaded" Unloaded="Window_Unloaded"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Menu FontSize="14">
            <MenuItem Header="_Work">
                <MenuItem x:Name="WorkstationMenuItem" Header="_Workstation" Click="WorkstationMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Edit" Visibility="Collapsed">
                <MenuItem Header="_Settings"/>
            </MenuItem>
            <MenuItem Header="_Help" Visibility="Collapsed">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="1" Grid.Column="2" Margin="0,0,10,0"><Run Text="Balance:"/></TextBlock>
            <TextBox Grid.Row="1" Grid.Column="3" x:Name="MoneyText" 
                     IsReadOnly="True" Width="120" />
        </Grid>
    </Grid>
</local:GameWindow>
