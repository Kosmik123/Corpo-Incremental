<local:GameWindow 
    x:Class="CorpoIncremental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGameEngine;assembly=WPFGameEngine"
        mc:Ignorable="d"
        MinWidth="300" MinHeight="180"
        Title="Main Window" Height="400" Width="600"
        FontSize="20" Loaded="Window_Loaded" Unloaded="Window_Unloaded"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button Width="200" Margin="10">
                Meters
            </Button>

            <Button Width="200" Margin="10">
                Seconds
            </Button>
            
            
            
            
        </StackPanel>        
        
        
        
    </Grid>
</local:GameWindow>
