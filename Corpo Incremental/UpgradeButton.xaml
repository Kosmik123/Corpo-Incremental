<UserControl x:Class="CorpoIncremental.UpgradeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CorpoIncremental"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="BuyButton" 
            Grid.Column="0" 
            Margin="1"
            Content="{Binding BuyButtonText, RelativeSource={RelativeSource AncestorType=UserControl}}"
          />
        <Button x:Name="SellButton"
                Grid.Column="1" Width="40" 
                Margin="1" 
                Visibility="{Binding SellButtonVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Content="Sell"/>


    </Grid>
</UserControl>
