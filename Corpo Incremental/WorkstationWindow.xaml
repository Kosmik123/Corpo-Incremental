<local:GameWindow 
       x:Class="CorpoIncremental.WorkstationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGameEngine;assembly=WPFGameEngine"
        mc:Ignorable="d"
        MinHeight="220" MinWidth="300"
        Title="Workstation" Height="300" Width="400" 
        FontSize="18" Unloaded="Window_Unloaded" Loaded="Window_Loaded"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">
            Workstation
        </TextBlock>
        
        <ProgressBar Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                     Margin="20" Height="20" x:Name="WorkProgressBar"/>

        <Button Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="1"
                Width="200" Height="50" x:Name="WorkButton" Margin="5"
                Content="Work" Click="WorkButton_Click"/>
    </Grid>
</local:GameWindow>
